<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Space
        android:id="@+id/txt_setting_group_gap"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_ee"
        android:orientation="vertical"
        android:paddingBottom="@dimen/settings_group_padding_vert"
        android:paddingLeft="@dimen/settings_item_padding_horiz"
        android:paddingRight="@dimen/settings_item_padding_horiz"
        android:paddingTop="@dimen/settings_group_padding_vert">

        <TextView
            android:id="@+id/txt_setting_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/settings_item_padding_horiz"
            android:textColor="@color/colorTextDefault"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_setting_group_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_setting_group_name"
            android:ellipsize="middle"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/colorTextDefault"
            android:textSize="@dimen/text_size_small"/>
    </RelativeLayout>
</LinearLayout>

