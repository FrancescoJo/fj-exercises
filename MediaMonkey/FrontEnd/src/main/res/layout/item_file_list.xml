<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="@dimen/file_picker_padding_horiz"
    android:paddingRight="@dimen/file_picker_padding_horiz"
    android:background="@drawable/selector_bg_item_file_picker">

    <!-- Sorry, no accessibility support at this moment :( -->
    <ImageView
        android:id="@+id/img_file_list_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_file_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/img_file_list_icon"
        android:layout_toStartOf="@+id/txt_file_list_date"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorTextDefault" />

    <TextView
        android:id="@+id/txt_file_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:textColor="@color/grey_d8"/>

</RelativeLayout>